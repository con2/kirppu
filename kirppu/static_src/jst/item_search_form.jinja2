<form role="form" class="form-horizontal">
    <div class="form-group">
        <label for="item_search_input" class="control-label col-sm-2">{% trans "Name / Bar code" %}</label>
        <div class="input-group col-sm-10">
            <input type="text" id="item_search_input" class="form-control">
        </div>
    </div>
    <div class="form-group">
        <label for="item_code_search_input" class="control-label col-sm-2">{% trans "Bar code part" %}</label>
        <div class="input-group col-sm-10">
            <input type="text" id="item_code_search_input" class="form-control">
        </div>
    </div>
    <div class="form-group">
        <label for="vendor_search_input" class="control-label col-sm-2">{% trans "Vendor ID" %}</label>
        <div class="input-group col-sm-2">
            <input type="number" step="1" min="1" id="vendor_search_input" class="form-control">
        </div>
    </div>
    <div class="form-group">
        <label for="item_search_min_price" class="control-label col-sm-2">{% trans "Minimum price" %}</label>
        <div class="input-group col-sm-2">
            {% if CURRENCY[0] %}
            <span class="input-group-addon">{{ CURRENCY[0]|safe }}</span>
            {% endif %}
            <input type="number" step="{{ price_step }}" min="0" id="item_search_min_price" class="form-control">
            {% if CURRENCY[1] %}
            <span class="input-group-addon">{{ CURRENCY[1]|safe }}</span>
            {% endif %}
        </div>
    </div>
    <div class="form-group">
        <label for="item_search_max_price" class="control-label col-sm-2">{% trans "Maximum price" %}</label>
        <div class="input-group col-sm-2">
            {% if CURRENCY[0] %}
            <span class="input-group-addon">{{ CURRENCY[0]|safe }}</span>
            {% endif %}
            <input type="number" step="{{ price_step }}" min="0" id="item_search_max_price" class="form-control">
            {% if CURRENCY[1] %}
            <span class="input-group-addon">{{ CURRENCY[1]|safe }}</span>
            {% endif %}
        </div>
    </div>
    <div class="form-group">
        <label for="item_search_type" class="control-label col-sm-2">{% trans "Type" %}</label>
        <div class="input-group col-sm-10">
            <select multiple class="form-control" id="item_search_type">
                {% for t in item_types %}
                    <option value="{{ t.name }}">{{ t.description }}</option>
                {% endfor %}
            </select>
        </div>
    </div>
    <div class="form-group">
        <label for="item_search_state" class="control-label col-sm-2">{% trans "State" %}</label>
        <div class="input-group col-sm-10">
            <select multiple class="form-control" id="item_search_state">
                {% for t in item_states %}
                    <option value="{{ t.name }}">{{ t.description }}</option>
                {% endfor %}
            </select>
        </div>
    </div>
    <div class="col-sm-offset-2">
        <button type="submit" class="btn btn-primary col-sm-1">{% trans "Search" %}</button>
        <button type="reset" class="btn btn-default col-sm-1">{% trans "Reset" %}</button>
    </div>
</form>
